{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Kafka": {
    "Topic": "sagabank-transaction",
    "ProducerConfig": {
      "BootstrapServers": "localhost:9092",
      "ClientId": "sagabank-transactions-producer",
      "TransactionalId": "sagabank-transactions-txid"
    },
    "ConsumerConfig": {
      "BootstrapServers": "localhost:9092",
      "ClientId": "sagabank-transactions-consumer",
      "GroupId": "sagabank",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": false,
      "PartitionAssignmentStrategy": "CooperativeSticky"
    }
  }
}
