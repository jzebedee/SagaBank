{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Kafka": {
    "Topics": {
      "Debit": "sagabank-debits",
      "Credit": "sagabank-credits"
    },
    "ProducerConfig": {
      "BootstrapServers": "localhost:9092"
    },
    "ConsumerConfig": {
      "BootstrapServers": "localhost:9092",
      "GroupId": "sagabank",
      "AutoOffsetReset": "Earliest"
    }
  },

  "ConnectionStrings": {
    "BankContext": "Data Source=bank.db"
  }
}
