{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Kafka": {
    "Topics": {
      "Transaction": "sagabank-transaction"
    },
    "ProducerConfig": {
      "BootstrapServers": "localhost:9092",
      "EnableIdempotence": true
    },
    "ConsumerConfig": {
      "BootstrapServers": "localhost:9092",
      "GroupId": "sagabank",
      "AutoOffsetReset": "Earliest"
    }
  },

  "ConnectionStrings": {
    "BankContext": "Data Source=bank.db"
  }
}
